extends ../layout

block content
  .ui.container
    h1.ui.dividing.header= article.title

    .ui.breadcrumb
      a.section home
      i.right.angle.icon.divider
      a.section= article.title

    .ui.right.aligned.grid
      .column
        a.ui.labeled.icon.button(href=`/articles`)
          i.list.icon
          | List
        a.ui.labeled.icon.button(href=`/articles/${article._id}/edit`)
          i.edit.icon
          | Edit
        a.ui.labeled.icon.button
          i.trash.icon
          | Delete

    .ui.piled.segment
      pre(style='white-space: pre-wrap')= article.text

    .ui.comments
      h3.ui.dividing.header Comments
      .comment
        a.avatar
          i.big.user.icon
        .content
          a.author Matt
          .metadata
            span.date Today at 5:42PM
          .text
            | How artistic!
          .actions
            a.reply Reply
      form.ui.reply.form
        .field
          textarea
        .ui.blue.labeled.submit.icon.button
          i.icon.edit
          |  Add Reply
